<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.linegrillpresent.studybuddy.RegisterNewCourse">

    <TextView
        android:id="@+id/course_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Class"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/course_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Course Name:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/course_title_text"
        tools:layout_editor_absoluteX="2dp" />

    <Spinner
        android:id="@+id/sp_courseName"
        android:layout_width="201dp"
        android:layout_height="37dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/course_Text" />

    <Spinner
        android:id="@+id/sp_code"
        android:layout_width="139dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/sp_courseName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/course_Text" />

    <!--<EditText-->
        <!--android:id="@+id/et_inviteC"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:ems="10"-->
        <!--android:hint="Access Code"-->
        <!--android:inputType="textPersonName"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/sp_num"-->
        <!--tools:layout_editor_absoluteX="2dp" />-->

    <Button
        android:id="@+id/btm_RegisterCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Join Course!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>
